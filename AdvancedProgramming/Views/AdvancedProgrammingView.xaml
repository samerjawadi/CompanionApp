<UserControl x:Class="AdvancedProgramming.Views.AdvancedProgrammingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:iconpack="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.InputBindings>
        <KeyBinding Key="S" 
                    Modifiers="Control" 
                    Command="{Binding SaveScriptCommand}" />
    </UserControl.InputBindings>
    <Border Background="#192428" Grid.Row="1">
        
        <Border Grid.Row="0" Grid.RowSpan="2" Margin="2.5" Grid.Column="0" BorderBrush="Gray"  Background="#2d383c" BorderThickness="2" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0 5">

                    <!-- Load Button -->
                    <Button Command="{Binding LoadFileScriptCommand}" Cursor="Hand" Margin="5 0"
                            Width="50" Height="50"
                            Background="Transparent" BorderThickness="2" BorderBrush="#4DA3FF"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                    <!-- half of Width/Height -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <iconpack:PackIconBootstrapIcons Kind="FileArrowDownFill" Foreground="#4DA3FF"
                                    Height="30" Width="30"/>
                    </Button>

                    <!-- Save Button -->
                    <Button Command="{Binding SaveScriptCommand}" Cursor="Hand" Margin="5 0"
                            Width="50" Height="50"
                            Background="Transparent" BorderThickness="2" BorderBrush="#00C8FF"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                    <!-- half of Width/Height -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <iconpack:PackIconBoxIcons Kind="SolidSave" Foreground="#00C8FF"
                                    Height="30" Width="30"/>
                    </Button>


                    <!-- Run Button -->
                    <Button Command="{Binding RunScriptCommand}" Cursor="Hand" Margin="5 0"
                            Width="50" Height="50"
                            Background="Transparent" BorderThickness="2" BorderBrush="#00E676"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                    <!-- half of Width/Height -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <iconpack:PackIconBootstrapIcons Kind="PlayCircleFill" Foreground="#00E676"
                                    Height="30" Width="30"/>
                    </Button>

                    <!-- Stop Button -->
                    <Button Command="{Binding StopScriptCommand}" Cursor="Hand" Margin="5 0"
                            Width="50" Height="50"
                            Background="Transparent" BorderThickness="2" BorderBrush="#FF4D6D"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                    <!-- half of Width/Height -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <iconpack:PackIconBootstrapIcons Kind="StopCircleFill" Foreground="#FF4D6D"
                                    Height="30" Width="30"/>
                    </Button>
                    
                </StackPanel>

                <Grid Grid.Row="1" Margin="0 5 5 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" MinWidth="500"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- Syncfusion Grid Splitter -->
                    <syncfusion:SfGridSplitter Grid.Column="1"
                               Margin="0 25"
                               Width="5"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               EnableCollapseButton="true"
                               ResizeBehavior="PreviousAndNext"
                               ShowsPreview="False"
                               ResizeDirection="Columns" />

                    <!-- Right Panel -->
                    <Grid Grid.Column="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0"/>
                        </Grid.RowDefinitions>

                        <Border CornerRadius="10" Background="Black">
                            <Grid>
                                <!-- CLI Output -->
                                <TextBox x:Name="CliOutputBox"
                         Text="{Binding CliOutput, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5"
                         FontFamily="Consolas" FontSize="14"
                         Foreground="White" Background="Transparent" BorderThickness="0"
                         IsReadOnly="True" AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         TextChanged="CliOutputBox_TextChanged"/>

                                <!-- Clear Button -->
                                <Button Command="{Binding ClearCommand}" Cursor="Hand" Margin="10"  
                        VerticalAlignment="Bottom" HorizontalAlignment="Right"
                        Width="50" Height="50"
                        Background="Transparent" BorderThickness="2" BorderBrush="White">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <iconpack:PackIconBootstrapIcons Kind="Trash3" Foreground="White"
                                                     Height="30" Width="30"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- CLI Input -->
                        <Grid Grid.Row="1" Margin="5 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                     Text="{Binding CommandLine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Consolas" FontSize="14"
                     Foreground="White" Background="Black"
                     BorderBrush="Gray" Margin="2"/>
                            <Button Command="{Binding SendCommand}" Grid.Column="1" Margin="2">Send</Button>
                        </Grid>
                    </Grid>

                    <!-- Left Panel -->
                    <Border Background="WhiteSmoke" Grid.Row="1" Grid.Column="0" Margin="5" CornerRadius="10">
                        <!-- Python Script Editor -->
                        <avalonEdit:TextEditor x:Name="TextEditor" Margin="5"
                               FontFamily="Consolas" FontSize="14" FontWeight="Normal"
                               SyntaxHighlighting="Python"
                               ShowLineNumbers="True"
                               TextChanged="TextEditor_TextChanged" 
                               Background="Transparent"/>
                    </Border>
                </Grid>


            </Grid>

        </Border>

    </Border>

</UserControl>
