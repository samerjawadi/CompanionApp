             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.InputBindings>
        <KeyBinding Key="S" 
                    Modifiers="Control" 
                    Command="{Binding SaveScriptCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
