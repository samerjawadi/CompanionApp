        <Button Command="{Binding CloseViewCommand}" Cursor="Hand" Margin="20 5"  
                                    VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    Width="50" Height="50"
                                    Background="Transparent" BorderThickness="3" BorderBrush="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <iconpack:PackIconCoolicons Kind="House01" Foreground="White"
                                                     Height="30" Width="30"/>
        </Button>

    </Grid>
</UserControl>
 