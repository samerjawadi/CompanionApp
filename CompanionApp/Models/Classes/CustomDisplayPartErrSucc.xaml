<core:NotificationDisplayPart x:Class="CompanionApp.Models.Classes.CustomDisplayPartErrSucc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconpack="http://metro.mahapps.com/winfx/xaml/iconpacks"                 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CompanionApp.Models.Classes"
             xmlns:core="clr-namespace:ToastNotifications.Core;assembly=ToastNotifications"
             mc:Ignorable="d"  Background="Transparent" Height="100"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

             d:DataContext="{d:DesignInstance local:CustomNotificationErrSucc, IsDesignTimeCreatable=False}" >

    <Grid >
        <Border Margin="5"  BorderThickness="2" BorderBrush="White" CornerRadius="10 10 0 10">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#169976"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsError}" Value="true">
                            <Setter Property="Background" Value="#FF4D6D"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="5">
                <Border Cursor="Hand" Background="Transparent"  VerticalAlignment="Top" HorizontalAlignment="right">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <iconpack:PackIconEvaIcons  Kind="CloseCircleOutline" Foreground="White" Margin="5"  Height="25" Width="25">

                    </iconpack:PackIconEvaIcons>
                </Border>

                
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <iconpack:PackIconBootstrapIcons Kind="Check2Circle" Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center" Height="25" Width="25">
                            <iconpack:PackIconBootstrapIcons.Style>
                                <Style TargetType="iconpack:PackIconBootstrapIcons">
                                    <Setter Property="Visibility" Value="Visible"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="true">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </iconpack:PackIconBootstrapIcons.Style>
                        </iconpack:PackIconBootstrapIcons>
                        
                        <iconpack:PackIconFeatherIcons Kind="AlertCircle" Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center" Height="25" Width="25">
                            <iconpack:PackIconFeatherIcons.Style>
                                <Style TargetType="iconpack:PackIconFeatherIcons">
                                    <Setter Property="Visibility" Value="Collapsed"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="true">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </iconpack:PackIconFeatherIcons.Style>
                        </iconpack:PackIconFeatherIcons>

                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Message}" Grid.Column="1"   HorizontalAlignment="Stretch" FontSize="15" FontWeight="DemiBold" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" >
                                
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>


            </Grid>
        </Border>
        
        

    </Grid>

</core:NotificationDisplayPart>