<DMSkin:DMSkinSimpleWindow x:Class="CompanionApp.Views.PlugAndPowerOnShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:controls="clr-namespace:DMSkin.WPF.Controls;assembly=DMSkin.WPF"
        xmlns:DMSkin="clr-namespace:DMSkin.WPF;assembly=DMSkin.WPF"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Companion Application"
        Width="600"
        Height="450"
        Background="Transparent"
        DMWindowShadowColor="{Binding DMWindowShadowColor}"
        DMWindowShadowOpacity="0.8"
        DMWindowShadowSize="15"
        Foreground="White"                          
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    <DMSkin:DMSkinSimpleWindow.Resources>
        <ContextMenu x:Key="Test">
            <MenuItem Header="DMSkin">
                <MenuItem Header="DMSkin" />
                <MenuItem Header="DMSkin" />
                <MenuItem Header="DMSkin" />
            </MenuItem>
            <Separator
                Width="180"
                Margin="-40,0,0,0"
                Opacity="0.5" />
            <MenuItem Header="944095635" />
            <MenuItem Header="www.dmskin.com" />
        </ContextMenu>
    </DMSkin:DMSkinSimpleWindow.Resources>
    <Grid Background="#192428">
        <Border  CornerRadius="5"  BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#88000000"/>
            </Border.Effect>
            <Grid Margin="0,0,0,0">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Name="DMTitle">
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Background="#39ace7" CornerRadius="0">
                <Grid >
                    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="20"
                            Text="Plug-In and Power-On" />

                    </WrapPanel>

                    
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" FontWeight="DemiBold" TextWrapping="Wrap" FontSize="17" Grid.Row="1" Text="Veuillez connecter le robot à l'ordinateur et vous assurer de l'allumer" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <controls:DMButton Command="{Binding StartCommand}" Grid.Row="2" Background="#2d383c"  FontWeight="DemiBold" Foreground="White" FontSize="18" Padding="5" CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" Margin="5">
                    Continuer
                </controls:DMButton>
            </Grid>
            
        </Grid>
        <ResizeGrip Style="{StaticResource WyyResizeGrip}" />
    </Grid>
</DMSkin:DMSkinSimpleWindow >