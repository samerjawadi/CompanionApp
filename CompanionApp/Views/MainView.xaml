<UserControl x:Class="CompanionApp.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:DMSkin.WPF.Controls;assembly=DMSkin.WPF"
             xmlns:iconpack="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <!-- Collapse animation -->
        <Storyboard x:Key="CollapseHeightStoryboard">
            <DoubleAnimation Storyboard.TargetName="SlidingGridScaleTransform" 
                             Storyboard.TargetProperty="ScaleY" 
                             To="0" Duration="0:0:1" />
        </Storyboard>

        <!-- Expand animation -->
        <Storyboard x:Key="ExpandHeightStoryboard">
            <DoubleAnimation Storyboard.TargetName="SlidingGridScaleTransform" 
                             Storyboard.TargetProperty="ScaleY" 
                             To="1" Duration="0:0:0.3" />
        </Storyboard>

    </UserControl.Resources>

    <Grid >

        <Border Background="#192428" Grid.Row="1">
            <Grid  Margin="2.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Margin="2.5"    Grid.Column="1"  Cursor="Hand" BorderBrush="Gray" Background="#2d383c" BorderThickness="2" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding OpenWebSiteCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid  Margin="10 5" VerticalAlignment="Center">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <iconpack:PackIconFontAwesome Kind="GlobeSolid" Width="150" Height="150" VerticalAlignment="Center" HorizontalAlignment="Stretch">

                        </iconpack:PackIconFontAwesome>
                        <TextBlock Text="{DynamicResource siteOur}" Grid.Row="1" Foreground="#FFFFFFFF" Margin="0 20" HorizontalAlignment="Center" FontWeight="DemiBold" FontSize="40"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Margin="2.5" Grid.Column="1" Cursor="Hand" BorderBrush="Gray" Background="#2d383c" BorderThickness="2" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding OpenWebSiteCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid  Margin="10 5" VerticalAlignment="Center" >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <iconpack:PackIconEvaIcons Kind="Github" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="150" Height="150" />
                        <TextBlock Text="{DynamicResource githubOur}" Grid.Row="1" Foreground="#FFFFFFFF" Margin="0 20" HorizontalAlignment="Center" FontWeight="DemiBold" FontSize="40"/>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.RowSpan="2" Margin="2.5" Grid.Column="0" BorderBrush="Gray"  Background="#2d383c" BorderThickness="2" CornerRadius="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{DynamicResource modules}" Foreground="#FFFFFFFF" Margin="10 5" HorizontalAlignment="Left" FontWeight="DemiBold" FontSize="40"/>
                        <ContentControl Grid.Column="1" x:Name="AtelierRegion" prism:RegionManager.RegionName="AtelierRegion" VerticalAlignment="Stretch"/>

                    </StackPanel>
                </Border>
            </Grid>
        </Border>




        <!-- SlidingGrid -->
        <Grid VerticalAlignment="Stretch" Background="#192428" x:Name="SlidingGrid" Visibility="{Binding IsViewVisiblity}" Grid.ColumnSpan="2"
              RenderTransformOrigin="0.5,1">
            <!-- Origin is set to bottom-center -->
            <Grid.RenderTransform>
                <ScaleTransform x:Name="SlidingGridScaleTransform" ScaleY="0" />
            </Grid.RenderTransform>
            <ContentControl Content="{Binding View}" />

        </Grid>
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowPlugInAnimation}" Value="true">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ShowPlugInAnimation}" Value="false">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Border Background="LightGray" Opacity="0.4"/>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Margin="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Image gif:ImageBehavior.AnimatedSource="../Resources/PowerOn2.gif" />


                    <TextBlock Margin="5" FontWeight="DemiBold" TextWrapping="Wrap" FontSize="17" Grid.Row="1" Text="{DynamicResource bootMode}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <controls:DMButton Command="{Binding CancelCommand}" Grid.Row="2" Background="#2d383c"  FontWeight="DemiBold" Foreground="White" FontSize="18" Padding="5" CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" Margin="5">
                        Cancel
                    </controls:DMButton>
                </Grid>

            </Grid>

        </Grid>

    </Grid>
</UserControl>
