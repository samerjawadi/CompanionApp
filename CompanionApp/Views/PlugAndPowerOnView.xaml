<UserControl x:Class="CompanionApp.Views.PlugAndPowerOnView"
             xmlns:controls="clr-namespace:DMSkin.WPF.Controls;assembly=DMSkin.WPF"
             xmlns:DMSkin="clr-namespace:DMSkin.WPF;assembly=DMSkin.WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompanionApp.Views"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"

             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#192428">
        <Border  CornerRadius="5"  BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#88000000"/>
            </Border.Effect>
            <Grid Margin="0,0,0,0">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Name="DMTitle">
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Background="#39ace7" CornerRadius="0">
                <Grid >
                    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="15"
                            Text="Plug-In and Power-On" />

                    </WrapPanel>
                    <WrapPanel 
                        Height="{Binding DMSystemButtonSize}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <controls:DMSystemCloseButton
                            DMSystemButtonForeground="White"
                            DMSystemButtonHoverForeground="White"
                            DMSystemButtonSize="40" />
                    </WrapPanel>

                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image gif:ImageBehavior.AnimatedSource="../Resources/PowerOn2.gif" />


                <TextBlock Margin="5" FontWeight="DemiBold" TextWrapping="Wrap" FontSize="17" Grid.Row="1" Text="Veuillez connecter le robot à l'ordinateur et vous assurer de l'allumer" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <controls:DMButton Command="{Binding CancelCommand}" Grid.Row="2" Background="#2d383c"  FontWeight="DemiBold" Foreground="White" FontSize="18" Padding="5" CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" Margin="5">
                    Cancel
                </controls:DMButton>
            </Grid>

        </Grid>
        <ResizeGrip Style="{StaticResource WyyResizeGrip}" />
    </Grid>
</UserControl>
